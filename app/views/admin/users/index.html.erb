<div class="col-lg-12 main-chart">
  <div class="col-lg-12">
    <h3 class="col-lg-11 text-left"><%= t ".user_list" %></h3>
    <%#= link_to "Thêm mới", new_admin_user_path, class: "btn btn-primary col-lg-1 text-right", remote: true, style: "margin-top: 15px;" %>
  </div>
  <table class="table table-striped table-advance table-hover table-bordered">
    <hr width="100%" size="1px" style="margin-top: 70px;">
    <thead>
      <tr>
        <th class="text-center"><i class="fa fa-file-code-o"></i> <%= t ".code" %></th>
        <th class="text-center"><i class="fa fa-user"></i> <%= t ".name" %></th>
        <th class="text-center"><i class="fa fa-envelope"></i> <%= t ".email" %></th>
        <th class="text-center"><i class="fa fa-phone"></i> <%= t ".phone" %></th>
        <th class="text-center"><i class="fa fa-intersex"></i> <%= t ".gender" %></th>
        <th class="text-center"><i class="fa fa-user-times"></i> <%= t ".role" %></th>
        <th class="text-center"><i class="fa fa-edit"></i> <%= t ".option" %></th>
      </tr>
    </thead>
    <tbody class="user-list">
      <% @users.each do |user| %>
        <tr>
          <td class="text-center" id="user-id"><%= user.id %></td>
          <td class="text-center"><%= user.name %></td>
          <td class="hidden-phone text-center"><%= user.email %></td>
          <td class="text-center"><%= user.phone %></td>
          <td class="text-center"><%= user.gender %></td>
          <td class="text-center"><%= user.role.name %></td>
          <td class="text-center">
            <%= link_to admin_user_path(user.id), remote: true, title: t(".show"), class: "btn btn-success btn-xs" do %>
              <i class="fa fa-info-circle"></i>
            <% end %>
            <% unless user.role.name == "admin" %>
              <%= button_tag "", type: "button", data: {id: user.id}, class: "btn btn-danger btn-xs delete-user", title: t(".del") do %>
                <i class="fa fa-trash-o "></i>
              <% end %>
            <% else %>
              <%= link_to edit_admin_user_path(user.id), remote: true, title: t(".edit"), class: "btn btn-primary btn-xs" do %>
                <i class="fa fa-pencil"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-12 pagination-user text-center">
    <!-- @Html.PagedListPager(Model, page => Url.Action("Index", new { page })) -->
  </div>
  <div class="modal fade" id="new-user-modal" role="dialog"></div>
</div>
