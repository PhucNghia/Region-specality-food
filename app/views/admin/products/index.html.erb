<div class="col-lg-12 main-chart">
  <div class="col-lg-12">
    <h3 class="col-lg-11 text-left"><%= t ".product_list" %></h3>
    <%= link_to t(".new"), new_admin_product_path, class: "btn btn-primary col-lg-1 text-right", remote: true, style: "margin-top: 15px;" %>
  </div>
  <table class="table table-striped table-advance table-hover table-bordered">
    <hr width="100%" size="1px" style="margin-top: 70px;">
    <thead>
      <tr>
        <th class="text-center"><i class="fa fa-file-code-o"></i> <%= t ".code" %></th>
        <th class="text-center"><i class="fa fa-image"></i> <%= t ".image" %></th>
        <th class="text-center"><i class="fa fa-product-hunt"></i> <%= t ".name" %></th>
        <th class="text-center"><i class="fa fa-money"></i> <%= t ".price" %></th>
        <th class="text-center"><i class="fa fa-check"></i> <%= t ".status" %></th>
        <th class="text-center"><i class="fa fa-area-chart"></i> <%= t ".region" %></th>
        <th class="text-center"><i class="fa fa-edit"></i> <%= t ".option" %></th>
      </tr>
    </thead>
    <tbody class="product-list">
      <% @products.each do |product| %>
        <tr>
          <td class="text-center product-id" id="product-id">
            <%= link_to admin_product_path(product.id), remote: true do %>
              #<%= product.id %>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to admin_product_path(product.id), remote: true do %>
              <%= image_tag product.image.url, style: "width: 50px; height: 50px;" %>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to admin_product_path(product.id), style: "color: black", remote: true do %>
              <%= product.name %>
            <% end %>
          </td>
          <td class="hidden-phone text-center"><%= format_money product.price %></td>
          <td class="text-center"><%= t ".#{product.status}" %></td>
          <td class="text-center"><%= product.region.name %></td>
          <td class="text-center">
            <%= link_to admin_product_path(product.id), remote: true, title: t(".show"), class: "btn btn-success btn-xs" do %>
              <i class="fa fa-info-circle"></i>
            <% end %>
            <%= button_tag "", type: "button", data: {id: product.id}, class: "btn btn-danger btn-xs delete-product", title: t(".del") do %>
              <i class="fa fa-trash-o "></i>
            <% end %>
            <%= link_to edit_admin_product_path(product.id), remote: true, title: t(".edit"), class: "btn btn-primary btn-xs" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-12 pagination-product text-center">
    <!-- @Html.PagedListPager(Model, page => Url.Action("Index", new { page })) -->
  </div>
  <div class="modal fade" id="new-product-modal" role="dialog"></div>
</div>
