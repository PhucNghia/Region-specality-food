<div class="col-lg-12 main-chart">
  <div class="col-lg-12">
    <h3 class="col-lg-11 text-left">Báo cáo sản phẩm đã bán</h3>
  </div>
  <div class="col-md-11 right">
    <b>Tổng số lượng:</b> <b><%= @total_quantity %></b>
  </div>
  <div class="col-md-11 right">
    <b>Tổng tiền:</b> <b><%= format_money @total_sale_price %></b>
  </div>
  <table class="table table-striped table-advance table-hover table-bordered">
    <hr width="100%" size="1px" style="margin-top: 70px;">
    <thead>
      <tr>
        <td class="center">Mã sản phẩm</td>
        <td class="left">Tên sản phẩm</td>
        <td class="left">Số lượng</td>
        <td class="left">Đơn giá</td>
        <td class="left">Thành tiền</td>
        <td class="center">Ngày mua</td>
      </tr>
    </thead>
    <tbody id="order-list">
      <% @order_details.each do |order_detail| %>
        <tr>
          <td class="order-id center"><a href="javascript:;">#<%= order_detail.product.id %></a></td>
          <td class="text-left"><%= order_detail.product.name %></td>
          <td class=""><%= order_detail.quantity %></td>
          <td class=""><%= format_money order_detail.product.price %></td>
          <td class=""><%= format_money order_detail.sale_price %></td>
          <td class="text-center"><%= order_detail.created_at.strftime("%B %e, %Y at %I:%M %p") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="modal fade" id="order-details" role="dialog"></div>
  <div class="col-md-12 pagination-product text-center">
    <%#= will_paginate @order_details %>
  </div>
</div>




