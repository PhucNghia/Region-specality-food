<div class="modal-dialog modal-lg" role="dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" id="modal_order_detail" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title"><%= t ".order_detail" %></h4>
    </div>
    <div class="modal-body">
      <div class="col-md-12">
        <h3 class="text-center"><%= t ".order_detail" %></h3>
        <div class="col-md-8">
          <div class="col-md-12">
            <%= t ".full_name" %>: <b><%= @order_user.name %></b>
          </div>
          <div class="col-md-12">
            <%= t ".phone" %>: <b><%= @order_user.phone %></b>
          </div>
          <div class="col-md-12">
            <%= t ".address" %>: <b><%= @order_user.address %></b>
          </div>
        </div>
        <div class="col-md-4">
          <div class="col-md-12">
            <%= t ".total_quantity" %>: <b><%= @total_quantity %></b>
          </div>
          <div class="col-md-12">
            <%= t ".total_amount" %>: <b><%= format_money @total_sale_price %></b>
          </div>
        </div>
      </div>
      <table class="table table-striped table-advance table-hover " style="margin-top: 130px;">
        <thead>
          <tr>
            <th class="text-center"><%= t ".code" %></th>
            <th class="text-center"><%= t ".product_name" %></th>
            <th class="text-center"><%= t ".quantity" %></th>
            <th class="text-center"><%= t ".unit_price" %></th>
            <th class="text-center"><%= t ".amount" %></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td class="text-center"><%= order_detail.product.id %></td>
              <td><%= order_detail.product.name %></td>
              <td class="text-center"><%= order_detail.quantity %></td>
              <td class="text-center"><%= format_money order_detail.product.price %></td>
              <td class="text-center"><%= format_money order_detail.sale_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".cancel" %></button>
    </div>
  </div>
</div>
