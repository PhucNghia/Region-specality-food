<div class="col-lg-12 main-chart">
  <div class="col-lg-12">
    <h3 class="col-lg-11 text-left"><%= t ".order_list" %></h3>
  </div>
  <table class="table table-striped table-advance table-hover table-bordered">
    <hr width="100%" size="1px" style="margin-top: 70px;">
    <thead>
      <tr>
        <th class="text-center"><i class="fa fa-file-code-o"></i> <%= t ".code" %></th>
        <th class="text-center"><i class="fa fa-user"></i> <%= t ".user_name" %></th>
        <th class="text-center"><i class="fa fa-phone"></i> <%= t ".phone" %></th>
        <th class="text-center"><i class="fa fa-product-hunt"></i> <%= t ".product_name" %></th>
        <th class="text-center"><i class="fa fa-sort-amount-asc"></i> <%= t ".quantity" %></th>
        <th class="text-center"> <%= t ".unit_price" %></th>
        <th class="text-center"> <%= t ".amount" %></th>
        <th class="text-center"><i class="fa fa-calendar"></i> <%= t ".date" %></th>
        <th class="text-center"><i class="fa fa-edit"></i> <%= t ".option" %></th>
      </tr>
    </thead>
    <tbody class="order-list">
      <% @orders.each do |order| %>
        <% order.OrderDetails.each do |order_detail| %>
          <tr>
            <td class="text-center" id="order-id"><%= order.id %></td>
            <td><%= order.user.name %></td>
            <td class="text-center"><%= order.user.phone %></td>
            <td><%= order_detail.product.name %></td>
            <td class="text-center"><%= order_detail.quantity %></td>
            <td class="text-center"><%= format_money order_detail.product.price %></td>
            <td class="text-center"><%= format_money order_detail.sale_price %></td>
            <td class="text-center"><%= order.order_date %></td>
            <td class="text-center">
              <button class="btn btn-success btn-xs"><i class="fa fa-info-circle"></i></button>
              <button class="btn btn-primary btn-xs"><i class="fa fa-pencil "></i></button>
              <button class="btn btn-danger btn-xs delete-order">
                <i class="fa fa-trash-o"></i>
              </button>
            </td>
            <input type="hidden" id="user-id" value="@item.userId" />
            <input type="hidden" id="product-id" value="@item.productId" />
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-12 pagination-user text-center">
    <!-- @Html.PagedListPager(Model, page => Url.Action("Index", new { page })) -->
  </div>
</div>
