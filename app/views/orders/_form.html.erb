<!-- Modal -->
<div class="modal-dialog modal-lg">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= t ".receiver_info" %></h4>
    </div>
    <div class="modal-body col-md-offset-2 col-md-8">
      <div class="">
        <%= simple_form_for @order,
        html: {id: "form-validation", class: "form-horizontal"}, defaults: {input_html: {class: "form-control" }}, remote: true do |f| %>
          <%= f.hidden_field :user_id, value: @current_user.id %>
          <div class="form-group">
            <%= f.input :receiver_name, class: "form-control", placeholder: t(".receiver_name") %>
          </div>

          <div class="form-group">
            <%= f.input :email, class: "form-control", placeholder: t(".email") %>
          </div>

          <div class="form-group">
            <%= f.input :phone, class: "form-control", placeholder: t(".phone") %>
          </div>

          <div class="form-group">
            <%= f.input :receiver_address, class: "form-control", placeholder: t(".receiver_address") %>
          </div>

          <div class="actions text-center">
            <%= f.submit t(".order"), class: "btn btn-primary submit" %>
            <%= f.button :button, t(".close"), type: "button", class: "btn btn-default", data: {dismiss: "modal"} %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
