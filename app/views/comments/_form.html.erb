<%= simple_form_for comment, url: url, remote: true, class: "comment-form" do |form| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="comment-form-comment">
        <%= form.hidden_field :parent_id %>
        <%= form.hidden_field :product_id, value: @product.id %>
        <%= form.text_area :content, class: "form-control", id: "content", placeholder: t(".enter_comment"), cols: 40, rows: 6 %>
      </div>
    </div>
  </div>
  <div class="form-submit">
    <%= form.submit t(".submit"), id: "submit" %>
  </div>
<% end %>
