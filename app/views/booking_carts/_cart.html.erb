<tr class="cart_item">
  <td class="col-md-2 product-thumbnail">
    <%= link_to product_path(product.id) do %>
      <%= image_tag product.image, style: "width: 100px; height: 100px;" %>
    <% end %>
  </td>
  <td class="col-md-2 text-center">
      <%= link_to product.name, product_path(product.id) %>
  </td>
  <td class="col-md-2 text-center">
    <span class="amount"><%= format_money product.price %></span>
  </td>
  <td class="col-md-2 text-center">
    <div class="quantity">
      <%= number_field_tag "product_quantity", product.quantity, id: product.id, class: "input-text qty text product-quantity",
        size: "4", step: 1, min: 1, max: 100 %>
    </div>
  </td>
  <td class="col-md-3 text-center">
    <span class="amount"><%= format_money amount_booking_cart(product.quantity, product.price) %></span>
  </td>
  <td class="col-md-1 text-center">
    <%= link_to "javascript:;", class: "remove remove-product", data: {product_id: product.id} do %>
      &times
    <% end %>
  </td>
</tr>
